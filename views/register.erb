<div class="row">
  <div class="col s6">
    <p>Please Log In to view this page</p>
    <form action="/user/login" method="post">
      <input type="text" name="username" id="username" placeholder="@username" required="">
      <input type="password" name="password" id="password" placeholder="password" required="">
      <button class="btn blue" type="submit" name="button">Log In</button>
    </form>
  </div>
  <div class="col s6">
    <p>Please Sign Up to view this page</p>
    <form action="/user/signup" method="post">
      <input type="text" name="username" id="username" placeholder="@username" required="">
      <input type="text" name="email" id="email" placeholder="example@example.com" required="">
      <input type="password" name="password" id="password" placeholder="password" required="">
      <button class="btn green" type="submit" name="button">Sign Up</button>
    </form>
  </div>
</div>